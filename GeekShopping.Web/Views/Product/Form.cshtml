@model ProductModel

@{
    var formTitle = $"{(Model?.Id.HasValue ?? false ? "Update" : "Create")} Product";
}

<form asp-action="Form">
    <div class="mt-5 d-flex">
        <h2 style="color: rgb(0, 98, 194);">@formTitle</h2>
    </div>
    <div class="mt-3 d-flex flex-column gap-3">
        <input asp-for="Id" hidden />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" id="price" class="form-control"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryName">Category Name</label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl">Image Url</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-5 d-flex">
        <button type="submit" class="btn btn-primary">@formTitle</button>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
