@page
@model GeekShopping.Identity.Pages.Account.SignIn.Index

<div class="lead">
    <h1>Register</h1>
    <p>Create your account</p>
</div>

<div class="d-flex flex-column">

    <partial name="_ValidationSummary" />

    <form method="post" asp-page="/Account/SignIn/Index">
        <div class="form-group">
            <label>First Name</label>
            <input class="form-control" asp-for="Input.FirstName">
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input class="form-control" asp-for="Input.LastName">
        </div>
        <div class="form-group">
            <label>Username</label>
            <input class="form-control" asp-for="Input.Username">
        </div>
        <div class="form-group">
            <label>Email address</label>
            <input type="email" class="form-control" placeholder="Enter email" asp-for="Input.Email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" asp-for="Input.Password">
        </div>
        <div class="mt-1 d-flex">
            <button class="btn btn-success mr-2">Register</button>
            <a class="btn btn-primary" asp-page="/Account/Login/Index">Cancel</a>
        </div>
    </form>
</div>
